<div class="card">
       <div class="about-card">
            <h2 class="title-card">{{ category.name }}</h2>
            <p class="time-card">Créé le {{ category.createdAt|date('d/m/Y') }}</p>
            <p class="content-card">
            {# On slice le contenu de la leçon et on affiche que les 100 premiers caractères #}
            {{category.featuredText|striptags|slice(0, 90) ~ '...'  }}</p>
            <a href="{{ path('category_show', {'slug': category.slug, 'id': category.id}) }}">
                <button type="button" style="background: {{ category.color|raw }};" >En savoir plus</button>
            </a></div>
       <div class="img-card" style="background: url({{ vich_uploader_asset(category, 'imageFile') }}) center no-repeat; background-size: cover;" ></div>
</div>

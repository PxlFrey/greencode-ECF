{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<section>
    <div data-aos="flip-up" class="img-bloc" style="background: url('/assets/img/login.jpg') no-repeat center; background-size: cover;"></div>
    <div class="content-bloc">
        <div class="form-col">
            <h1>Connectez-vous</h1>
                <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
    
                    <div data-aos="fade-left" class="form-group">
                        <label for="inputEmail">Adresse email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div data-aos="fade-right" class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
                    <button class="btn-login" type="submit">Se connecter</button>
                </form>
        </div>
        </div>

</section>


{% endblock %}
